@model WeatherApp.Data.WeatherData

@{
    string url ="http://openweathermap.org/img/wn/" + Model.weather[0].icon + "@2x.png";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Weather in @Html.DisplayFor(model => model.name)</h4>
        <hr />
        <div class="card-img">
            <img src=@url />
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                General Info:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.weather[0].main)
            </dd>
            <dt class="col-sm-2">
                Temperature:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.temp)°C
            </dd>
            <dt class="col-sm-2">
                Highest:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.temp_max)°C
            </dd>
            <dt class="col-sm-2">
                Lowest:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.temp_min)°C
            </dd>
            <dt class="col-sm-2">
                Feels like:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.feels_like)°C
            </dd>
            <dt class="col-sm-2">
                Humidity:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.humidity)
            </dd>
            <dt class="col-sm-2">
                Pressure:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.main.pressure) Bar
            </dd>
        </dl>
        <div>
            <a asp-area="" asp-controller="Weather" asp-action="Search" class="btn btn-dark">new search</a>
        </div>
    </div>
</div>

